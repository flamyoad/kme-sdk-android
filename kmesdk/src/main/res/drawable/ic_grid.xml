<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="line">
            <size
                android:width="5dp"
                android:height="5dp" />
            <stroke
                android:width="1px"
                android:color="#c0c0c0" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="90"
            android:toDegrees="180">
            <shape android:shape="line">
                <size
                    android:width="5dp"
                    android:height="5dp" />
                <stroke
                    android:width="1px"
                    android:color="#c0c0c0" />
            </shape>
        </rotate>
    </item>
</layer-list>