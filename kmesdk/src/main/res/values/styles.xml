<resources>

    <style name="FloatingActionButton.Border" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorAccent">@color/grey1</item>
        <item name="colorControlHighlight">@color/grey1</item>
        <item name="colorSecondary">@color/grey1</item>
    </style>

    <style name="QuickPollProgressBar_Default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progressMax">100</item>
        <item name="currentProgress">0</item>

        <item name="progressReachedColor">@color/white</item>

        <item name="progressTextSize">14sp</item>
        <item name="progressTextColor">@color/white</item>

        <item name="progressReachedBarHeight">12dp</item>
        <item name="leftIcon">@drawable/ic_poll_star</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
